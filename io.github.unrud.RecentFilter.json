{
    "app-id": "io.github.unrud.RecentFilter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "recent-filter",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-data",
        "--filesystem=home:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "recent-filter",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Unrud/recent-filter",
                    "tag": "v0.1.2",
                    "commit": "5ff2cfb6c5d4de08dc828af52c110f762670185c",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/Unrud/recent-filter/releases/latest",
                        "tag-query": ".tag_name"
                    }
                }
            ]
        }
    ]
}
